<% include ../partials/header  %>


<div class="container">
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
				<li class="list-group-item active">Info </li>
				<li class="list-group-item">
					<a href="#">Station Name: <span class="pull-right"> <%= station.stationName %></span></a>  
				</li>  
				<li class="list-group-item">
					<a href="#">Station Id: <span class="pull-right"> <%= station.stationId %></span></a>  
				</li>  
				<li class="list-group-item">
					<a href="#">No. of Complaints: <span class="pull-right"><%= allComps.length %> </span></a>	 
				</li>
				<li class="list-group-item">
					<a href="#">No. of Employees: <span class="pull-right"><%= allEmps.length %> </span></a>	 
				</li>
				<li class="list-group-item">
					<a class="btn btn-sm btn-primary" href="/station/<%= station._id%>/edit">Edit</a>
					 <form class="del-button" action="/station/<%= station._id%>?_method=DELETE"  method="POST" >
						<button class="btn btn-sm btn-danger">Delete</button>
					</form>	 
				</li>
			</ul>
			<br>
			<ul class="list-group">
			  	<li class="list-group-item active">No. of Resolved Complaints</li>
			  	<li class="list-group-item ">
			  		<a href="#">Previous Month: <span class="pull-right"> <%= stat[1][10]%> </span> </a>  
			  	</li>
			  	<li class="list-group-item ">
			  		<a href="#">Current Month: <span class="pull-right"> <%= stat[1][11]%> </span> </a>  
			  	</li>
			  	<li class="list-group-item ">
			  		<a href="#">Current Year: <span class="pull-right"> <%= resSum%> </span> </a> 
			  	</li>
			</ul>

		</div>

		<div class="col-md-9 well">
			<canvas id="line-chart" width="800" height="450"></canvas>
		</div>

	<div>
		
		
</div>

<div class="container">
	<h3>Complaints: </h3>
	<div class="row fl_wp">
		<% complaints.forEach(function(complaint){%>
			<div class="col-xs-12 col-sm-6 col-lg-4">
				<div class="thumbnail">
					<img src=" <%= complaint.image %> ">
					<div class="caption">
						<h2> <%= complaint.title %> </h2>
						<p> <%= complaint.desc.substr(0,50)%>...</p>
						<a class="btn btn-primary" href="/complaint/<%= complaint._id%>">know more</a>
					</div>
				</div>
			</div> 
		<% }) %>
	</div>
	<% var cpage = Number(cpage) %>
	<% var epage = Number(epage) %>
	
	<nav aria-label="...">
	  <ul class="pager">
		<% if(cpage && cpage > 0){ %>
			<li><a href="/station/<%= station._id%>?cpage=<%= cpage-1%>&epage=<%= epage%>">Previous</a></li>
		<% } %>
		<% if( (cpage+1)*3 < allComps.length ){ %>
			<li><a href="/station/<%= station._id%>?cpage=<%= cpage+1%>&epage=<%= epage%>">Next</a></li>
		<% } %>
	  </ul>
	</nav>

	<h3>Employees: </h3>
	<div class="row fl_wp">
		<% employees.forEach(function(employee){%>
			<div class="col-xs-12 col-sm-6 col-lg-4">
				<div class="thumbnail">
					<img src=" <%= employee.image %> ">
					<div class="caption">
						<h2> <%= employee.name %> </h2>
						<a class="btn btn-primary" href="/employee/<%= employee._id%>">know more</a>
					</div>
				</div>
			</div> 
		<% }) %>
	</div>
	<nav aria-label="...">
	  <ul class="pager">
		<% if(epage && epage > 0){ %>
			<li><a href="/station/<%= station._id%>?cpage=<%= cpage%>&epage=<%= epage-1%>">Previous</a></li>
		<% } %>
		<% if( (epage+1)*3 < allEmps.length ){ %>
			<li><a href="/station/<%= station._id%>?cpage=<%= cpage%>&epage=<%= epage+1%>">Next</a></li>
		<% } %>
	  </ul>
	</nav>
</div>

<script type="text/javascript">

	new Chart(document.getElementById("line-chart"), {
	  	type: 'line',
	  	data: {
			labels: "<%= stat[2] %>".split(","),
			datasets: [{ 
				data: [<%= stat[0]%>],
				label: "Unresolved Complaints ",
				borderColor: "#3e95cd",
				fill: false
		  	},
		  	{ 
				data: [<%= stat[1]%>],
				label: "Resolved Complaints",
				borderColor: "#8e5ea2",
				fill: false
		  	}
			]
	  	},
	  	options: {
			title: {
			 	display: true,
			  	text: 'Complaints'
			},
			elements: {
	            line: {
	                tension: 0, // disables bezier curves
	            }
	        },scales: {
			    yAxes: [{
			      	scaleLabel: {
			        	display: true,
			        	labelString: 'No. of Complaints'
			      	}
			    }],
			    xAxes: [{
			      	scaleLabel: {
			        	display: true,
			        	labelString: 'Month'
			      	}
			    }]
			}
		}
	});
</script>


<% include ../partials/footer  %>